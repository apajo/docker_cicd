#!/bin/bash

# Resolve paths
export SCRIPTPATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
source $SCRIPTPATH/.common

print "\n${APP_NAME}: $@ ..."
hr

exit_code=0

# Default values
service=""
command=""

# Parse arguments
for arg in "$@"; do
  case $arg in
    --service=*)
      service="${arg#*=}"
      shift
      ;;
    *)
      command="$command $arg"
      ;;
  esac
done

# Trim leading/trailing whitespace from command
command=$(echo "$command" | xargs)

echo "CMD: $command"
echo "SRVC: $service"

# Execute the command based on the presence of --service argument
if [ -z "$service" ]; then
  if [ -z "$command" ]; then
    docker compose exec -it --user=cicd host sh
    exit_code=$?
  else
    docker compose exec -it --user=cicd host sh -c "$command"
    exit_code=$?
  fi
else
  echo "RESULT: docker compose exec -it --user=cicd host sh -c \"docker compose exec -it $service sh -c '$command'\""

  docker compose exec -it --user=cicd host sh -c "docker compose exec -it $service sh -c '$command'"
  exit_code=$?
fi

hr

exit $exit_code
